{
  "name": "ha-calendar2image",
  "version": "0.12.2",
  "description": "Transform calendars, other data, or both into customizable images - supports ICS feeds, external data sources, custom templates, intelligent caching, and e-ink optimization for ultra-low-power displays.",
  "main": "src/index.js",
  "scripts": {
    "start": "node src/index.js",
    "dev": "node src/index.js",
    "watch": "node watch-template.js",
    "test:local": "jest",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --config=jest.integration.config.js --runInBand",
    "test:all": "npm run test:local && npm run test:coverage && npm run test:ci",
    "test:matrix": "jest --config=jest.matrix.config.js --runInBand"
  },
  "keywords": [
    "home-assistant",
    "calendar",
    "ics",
    "image-generation"
  ],
  "author": "jantielens",
  "license": "MIT",
  "dependencies": {
    "ajv": "^8.12.0",
    "chokidar": "^4.0.1",
    "express": "^4.18.2",
    "ical.js": "^2.0.1",
    "node-cron": "^4.2.1",
    "puppeteer": "^21.0.0",
    "sharp": "^0.33.0"
  },
  "devDependencies": {
    "canvas": "^3.2.0",
    "jest": "^29.7.0",
    "nock": "^13.5.0"
  },
  "engines": {
    "node": ">=22.0.0"
  }
}
